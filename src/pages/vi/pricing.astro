---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Tableprice from "../../components/landing/Tableprice.astro";
import Tableprice2 from "../../components/landing/Tableprice2.astro";


import i18next from "../../i18n";
i18next.changeLanguage("vi");


// Giả định Alpine.js được tải để xử lý x-data, x-show và @click.
---

<BaseLayout>
  <!-- activeTab: 'ai-agent' (mặc định) hoặc 'admin' -->
  <!-- isYearly: false (6 tháng/pricetable1) hoặc true (1 năm/pricetable2) -->
  <section
    class="py-16 bg-gray-50"
    x-data="{ activeTab: 'ai-agent', isYearly: false }"
  >
    <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
      <!-- Tiêu đề -->
      <div class="mb-4">
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-tight mb-6"
        >
          {i18next.t("pricing.title")}
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-gray-900 via-green-600 to-gray-900"
          >
            MiAgent AI
          </span>
        </h1>
        <h2 class="text-gray-700 text-2xl font-semibold mt-1">
          {i18next.t("pricing.subtitle")}
        </h2>
      </div>

      <!-- Bảng giá -->
      <div class="mt-4">
        <Tableprice />
      </div>
    </div>
  </section>
</BaseLayout>
