---
import i18next from "../../i18n";
i18next.changeLanguage("vi");

import BaseLayout from "../../layouts/BaseLayout.astro";
import WhyChooseUs from "../../components/landing/WhyChooseUs.astro";
import Hero from "../../components/landing/Hero.astro";
import SectionTwo from "../../components/landing/SectionTwo.astro";
import SectionAIforWork from "../../components/landing/SectionAIforWork.astro";
import SectionCase from "../../components/landing/SectionCase.astro";
import SectionOne from "../../components/landing/SectionOne.astro";
import HowItWorks from "../../components/landing/HowItWorks.astro";
import OnlyMiAgent from "../../components/landing/OnlyMiAgent.astro";
import Page4 from "../../components/landing/Page4.astro";
import ChatMessenger from "../../components/features/chat/ChatMessenger.astro";
const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://miagent.io/#organization",
      "name": i18next.t("landing.json_ld.organization.name"),
      "url": "https://miagent.io",
      "logo": "https://miagent.io/logomi.svg",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+84-987-654-321",
        "contactType": i18next.t("landing.json_ld.organization.contact_type"),
        "areaServed": "VN",
        "availableLanguage": ["Vietnamese", "English"]
      },
      "sameAs": [
        "https://www.facebook.com/miagent",
        "https://twitter.com/miagent"
      ]
    },
    {
      "@type": "SoftwareApplication",
      "name": i18next.t("landing.json_ld.application.name"),
      "operatingSystem": "Web, Cloud",
      "applicationCategory": "BusinessApplication",
      "description": i18next.t("landing.json_ld.application.description"),
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "VND",
        "availability": "https://schema.org/InStock"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "ratingCount": "1250"
      },
      "author": {
        "@id": "https://miagent.io/#organization"
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": i18next.t("landing.json_ld.faq.0.question"),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": i18next.t("landing.json_ld.faq.0.answer")
          }
        },
        {
          "@type": "Question",
          "name": i18next.t("landing.json_ld.faq.1.question"),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": i18next.t("landing.json_ld.faq.1.answer")
          }
        },
        {
          "@type": "Question",
          "name": i18next.t("landing.json_ld.faq.2.question"),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": i18next.t("landing.json_ld.faq.2.answer")
          }
        }
      ]
    }
  ]
};

// Đã cập nhật structure theo en/index.astro
---

<BaseLayout>
  <ChatMessenger />
  <Hero />
  <WhyChooseUs />
  <SectionAIforWork/>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  <OnlyMiAgent/>
  <Page4/>
</BaseLayout>
