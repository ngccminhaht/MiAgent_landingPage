---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/landing/Hero.astro";
import WhyChooseUs from "../components/landing/WhyChooseUs.astro";
import OnyMiAgent from "../components/landing/OnlyMiAgent.astro"; // Lưu ý: Tên file là Only, tên biến là Ony, nhưng vẫn chạy dc
import Page4 from "../components/landing/Page4.astro";
import AiforWork from "../components/landing/SectionAIforWork.astro";
import ChatMessenger from "@/components/landing/ChatMessenger.astro";

// Đã xóa hết mấy cái TestHero, SectionOne, SectionTwo... không dùng để code nhẹ hơn
---

<BaseLayout>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://miagent.io/#organization",
          "name": "MiAgent Global",
          "url": "https://miagent.io",
          "logo": "https://miagent.io/logomi.svg",
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+84-987-654-321",
            "contactType": "customer service",
            "areaServed": "VN",
            "availableLanguage": ["Vietnamese", "English"]
          },
          "sameAs": [
            "https://www.facebook.com/miagent",
            "https://twitter.com/miagent"
          ]
        },
        {
          "@type": "SoftwareApplication",
          "name": "MiAgent",
          "operatingSystem": "Web, Cloud",
          "applicationCategory": "BusinessApplication",
          "description": "Giải pháp AI Chatbot bán hàng và chăm sóc khách hàng tự động đa kênh, tích hợp CRM/ERP.",
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "VND",
            "availability": "https://schema.org/InStock"
          },
          "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.8",
            "ratingCount": "1250"
          },
          "author": {
            "@id": "https://miagent.io/#organization"
          }
        },
        {
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "MiAgent có tích hợp được với CRM không?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Có, MiAgent tích hợp sâu với các hệ thống CRM/ERP phổ biến để đồng bộ thông tin đơn hàng và khách hàng theo thời gian thực."
              }
            },
            {
              "@type": "Question",
              "name": "AI của MiAgent có nhận diện được hình ảnh không?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Có, MiAgent sở hữu công nghệ độc quyền giúp nhận diện hình ảnh sản phẩm khách gửi để tìm kiếm mã hàng và tư vấn chính xác."
              }
            },
            {
              "@type": "Question",
              "name": "Tôi có thể dùng thử MiAgent miễn phí không?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "MiAgent cung cấp gói dùng thử miễn phí để bạn trải nghiệm các tính năng cốt lõi trước khi quyết định nâng cấp."
              }
            }
          ]
        }
      ]
    }
  </script>

  <Hero />
  <WhyChooseUs />
  <AiforWork />
  <OnyMiAgent />
  <Page4 />
  <ChatMessenger />
</BaseLayout>
