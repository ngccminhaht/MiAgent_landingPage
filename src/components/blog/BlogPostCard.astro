---
<!-- Thẻ bài viết tối giản: Loại bỏ border, shadow, và padding lớn -->
<article class="transition group">
    
    <!-- Liên kết bao quanh ảnh và tiêu đề/nội dung -->
    <a href={`/blog/${post.slug}`} class="block space-y-6">
        <!-- Ảnh Thumbnail: Tỷ lệ ảnh 3/2 (h-48/aspect-video) và góc bo tròn nhẹ -->
        <!-- Đã thêm rounded-lg cho container ảnh -->
        <div class="relative overflow-hidden rounded-lg">
            <img 
                src={post.thumbnailUrl} 
                alt={post.title} 
                class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-[1.05]" 
                width="400" 
                height="200"
            />
        </div>

        <!-- Vùng nội dung (Giảm khoảng cách) -->
        <div>
            <!-- Danh mục (Mới được thêm vào, nằm trên tiêu đề) -->
            <p class="text-xs tracking-widest uppercase font-semibold text-blue-600 mb-1">
                {post.category}
            </p>

            <!-- Tiêu đề (Kích thước nhỏ hơn, nhấn mạnh sự rõ ràng) -->
            <h2 class="text-base font-bold text-gray-900 group-hover:text-blue-600 transition line-clamp-2"> 
                {post.title}
            </h2>

            <!-- Đoạn tóm tắt (ĐÃ BỊ XÓA THEO YÊU CẦU) -->
            
        </div>
    </a>

    <!-- Meta Data (Hiện đang được ẩn. Bỏ chú thích các dòng sau nếu muốn hiển thị lại Ngày Đăng) -->
    <!-- 
    <p class="text-xs text-gray-400 mt-2 uppercase tracking-wide">
        Ngày đăng: {publishedDate}
    </p>
    -->
    
</article>