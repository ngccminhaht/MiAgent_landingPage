---
// Nhận dữ liệu bài viết nổi bật
const { post } = Astro.props;

// Định nghĩa đường dẫn
const postUrl = `/blog/${post.slug}`;
import i18next from "../../i18n";
---
<section class="mb-16 pt-6 pb-0 ">
    <!-- Bố cục 2 cột cho Desktop -->
    <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- Cột 1: Tiêu đề và Mô tả (Văn bản) -->
        <div class="w-full space-y-4 md:space-y-6">
            
            <!-- Danh mục -->
            <p class="text-xs tracking-widest uppercase font-bold text-gray-800">
                {post.category} 
            </p>

            <!-- Tiêu đề lớn (Lớn nhất trong trang) -->
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold leading-tight">
                <a href={postUrl} class="hover:text-blue-700 transition duration-300">
                    {post.title}
                </a>
            </h2>

            <!-- Tóm tắt -->
            <p class="text-lg text-black font-bold line-clamp-3">
                {post.excerpt}
            </p>

            <!-- Nút Đọc thêm -->
            <a href={postUrl} class="inline-flex items-center text-black underline hover:text-blue-600 font-semibold hover:underline">
                {i18next.t('blog.list.read_more')}
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            </a>
        </div>
        
        <!-- Cột 2: Hình ảnh (Media) -->
        <div class="relative overflow-hidden rounded-xl shadow-2xl transform hover:scale-[1.01] transition-transform duration-500">
            <a href={postUrl}>
                <img 
                id="test"
                    src={post.thumbnailUrl} 
                    alt={post.title} 
                    class="w-full h-96 object-cover" 
                    width="700"
                    height="400"
                />
            </a>
            <!-- Overlay nhỏ cho hiệu ứng thẩm mỹ -->
            <div class="absolute inset-0 bg-black/5 mix-blend-multiply"></div>
        </div>
    </div>
    <div class="mt-12 mb-0  h-[1px]  bg-gray-600 mx-auto"></div>

</section>