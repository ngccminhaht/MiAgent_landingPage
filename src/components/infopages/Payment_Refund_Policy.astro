---
import i18next from "../../i18n";
const sections = i18next.t('legal.payment.sections', { returnObjects: true }) as any;
const section1 = sections[0];
const section2 = sections[1];
const section3 = sections[2];
const section4 = sections[3];
const section5 = sections[4];
---
<section class="bg-white relative overflow-hidden">
  <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5"></div>

  <div
    class="mx-auto w-full lg:px-24 max-w-7xl md:px-12 items-center px-8 py-24"
  >
    <div class="relative mx-auto max-w-[40rem] pt-20 pb-16 text-center">
      <h1
        class="text-3xl tracking-tight font-bold text-gray-900 md:text-5xl font-display"
      >
        {i18next.t('legal.payment.title')}
      </h1>
      <p class="mt-4 text-base leading-7 text-gray-500">
        {i18next.t('legal.payment.effective_date')}
      </p>
      <div class="mt-6 w-24 h-1 bg-green-500 mx-auto rounded-full"></div>
    </div>

    <div
      class="mx-auto max-w-[48rem] prose prose-lg prose-green text-gray-600 prose-h3:text-gray-900 prose-h3:text-xl prose-a:font-semibold prose-a:text-green-600 hover:prose-a:text-green-800"
    >
      <p class="lead">
        {i18next.t('legal.payment.intro')}
      </p>

      <h3>{section1.title}</h3>
      <p>
        {section1.content}
      </p>
      <ul>
        {section1.items.map((item) => (
            <li set:html={item}></li>
        ))}
      </ul>

      <h3>{section2.title}</h3>
      <p>{section2.content}</p>

      <div
        class="not-prose my-6 bg-green-50 p-6 rounded-2xl border border-green-200 shadow-sm"
      >
        <h4
          class="text-lg font-bold text-green-900 flex items-center gap-2 mb-3"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
            ></path></svg
          >
          {section2.method1.title}
        </h4>
        <p class="text-sm text-gray-700 mb-4" set:html={section2.method1.description}></p>

        <div class="bg-white p-5 rounded-xl border border-green-100 grid gap-3">
          <div
            class="flex justify-between items-center border-b border-gray-100 pb-2"
          >
            <span class="text-gray-500 text-sm">{section2.method1.bank_info.bank}</span>
            <span class="font-bold text-gray-900 text-lg"
              >{section2.method1.bank_info.bank_name}</span
            >
          </div>
          <div
            class="flex justify-between items-center border-b border-gray-100 pb-2"
          >
            <span class="text-gray-500 text-sm">{section2.method1.bank_info.account_number}</span>
            <span
              class="font-mono font-bold text-2xl text-green-600 tracking-wider"
              >{section2.method1.bank_info.account_number_value}</span
            >
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-500 text-sm">{section2.method1.bank_info.account_holder}</span>
            <span class="font-bold text-gray-900 text-lg uppercase"
              >{section2.method1.bank_info.account_holder_value}</span
            >
          </div>
        </div>
        <p class="text-xs text-gray-500 mt-3 italic" set:html={section2.method1.note}></p>
      </div>

      <h4>{section2.method2.title}</h4>
      <p set:html={section2.method2.description}></p>

      <h4>{section2.method3.title}</h4>
      <p>{section2.method3.description}</p>
      <ul>
        {section2.method3.items.map((item) => (
            <li set:html={item}></li>
        ))}
      </ul>

      <h3>{section3.title}</h3>
      <p>{section3.content}</p>
      <ul>
        {section3.items.map((item) => (
            <li set:html={item}></li>
        ))}
      </ul>

      <h3>{section4.title}</h3>
      <ul>
        {section4.items.map((item) => (
            <li set:html={item}></li>
        ))}
      </ul>

      <h3>{section5.title}</h3>
      <div class="mt-8 p-4 bg-gray-50 rounded-lg border-l-4 border-green-500">
        <p class="font-bold text-gray-900">
          {section5.contact_info.title}
        </p>
        <p class="mt-2 text-gray-700">
          {section5.contact_info.hotline} <a
            href="tel:0987654321"
            class="font-bold text-green-600 hover:underline">0708207777</a
          >
        </p>
        <p class="text-gray-700">{section5.contact_info.email} billing@miagent.io</p>
      </div>

      <p class="mt-8 text-center font-medium text-gray-900">
        {i18next.t('legal.payment.footer')}
      </p>
    </div>
  </div>
</section>
