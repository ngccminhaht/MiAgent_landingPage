---
// src/pages/About.astro

// Import các layout hoặc component cần thiết (Giả sử bạn có BaseLayout)
// import BaseLayout from '../layouts/BaseLayout.astro';
// Thay thế bằng cấu trúc HTML/Body nếu bạn không dùng layout

// Import các icon Lucide (Nếu bạn đang sử dụng tích hợp Lucide trong Astro,
// nếu không, chúng ta sẽ dùng SVG thô như bên dưới)
import i18next from "../../i18n";
---

<section id="about-miagent" class="py-20 sm:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto mb-16">
      <h1 class="text-6xl font-extrabold text-gray-900 tracking-tight mb-4">
        {i18next.t('about.title')}
      </h1>
      <p class="text-3xl font-medium text-gray-600 leading-relaxed">
        {i18next.t('about.subtitle')}
      </p>
    </div>

    <div
      class="max-w-3xl mx-auto mb-16 p-8 bg-blue-50/50 rounded-2xl shadow-lg"
    >
      <h2
        class="text-3xl font-extrabold text-blue-700 mb-4 flex items-center gap-3"
      >
        {i18next.t('about.mission.title')}
      </h2>
      <p class="text-lg text-gray-700 leading-relaxed">
        {i18next.t('about.mission.content')}
      </p>
    </div>

    <div class="mb-16">
      <h2
        class="text-3xl font-extrabold text-gray-900 mb-6 flex items-center gap-3"
      >
        {i18next.t('about.who_we_are.title')}
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        <div class="lg:col-span-1">
          <p class="text-lg text-gray-700 leading-relaxed">
            {i18next.t('about.who_we_are.description')}
          </p>
        </div>

        <div
          class="lg:col-span-2 p-6 border-l-4 border-green-500 bg-green-50/50 rounded-xl shadow-md"
        >
          <p class="text-xl font-semibold text-gray-800 mb-4">
            {i18next.t('about.who_we_are.capabilities_title')}
          </p>
          <ul class="space-y-3">
            <li class="flex items-start">
              <div>
                <strong class="text-gray-900"
                  >{i18next.t('about.who_we_are.capabilities.0.title')}</strong
                > {i18next.t('about.who_we_are.capabilities.0.description')}
              </div>
            </li>
            <li class="flex items-start">
              <div>
                <strong class="text-gray-900"
                  >{i18next.t('about.who_we_are.capabilities.1.title')}</strong
                > {i18next.t('about.who_we_are.capabilities.1.description')}
              </div>
            </li>
            <li class="flex items-start">
              <div>
                <strong class="text-gray-900"
                  >{i18next.t('about.who_we_are.capabilities.2.title')}</strong
                > {i18next.t('about.who_we_are.capabilities.2.description')}
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="mb-16">
      <h2
        class="text-3xl font-extrabold text-gray-900 mb-6 flex items-center gap-3"
      >
        {i18next.t('about.values.title')}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div
          class="p-6 bg-gray-50 rounded-xl shadow-md border-t-4 border-blue-600 flex flex-col items-start"
        >
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            {i18next.t('about.values.items.0.title')}
          </h3>
          <p class="text-gray-700">
            {i18next.t('about.values.items.0.description')}
          </p>
        </div>

        <div
          class="p-6 bg-gray-50 rounded-xl shadow-md border-t-4 border-green-600 flex flex-col items-start"
        >
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            {i18next.t('about.values.items.1.title')}
          </h3>
          <p class="text-gray-700">
            {i18next.t('about.values.items.1.description')}
          </p>
        </div>

        <div
          class="p-6 bg-gray-50 rounded-xl shadow-md border-t-4 border-red-600 flex flex-col items-start"
        >
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            {i18next.t('about.values.items.2.title')}
          </h3>
          <p class="text-gray-700" set:html={i18next.t('about.values.items.2.description')} />
        </div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto text-center pt-8 border-t border-gray-200">
      <h2
        class="text-3xl font-extrabold text-gray-900 mb-4 flex justify-center items-center gap-3"
      >
        {i18next.t('about.vision.title')}
      </h2>
      <p class="text-lg text-gray-700 leading-relaxed mb-4">
        {i18next.t('about.vision.content_1')}
      </p>
      <p class="text-lg text-gray-700 font-medium">
        {i18next.t('about.vision.content_2')}
      </p>
    </div>
  </div>
</section>
