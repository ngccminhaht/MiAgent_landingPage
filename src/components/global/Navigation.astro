---
import i18next from "../../i18n";

const currentLang = i18next.language;
const baseUrl = currentLang === "en" ? "/en" : "";

// Server-side logic for language switching
const pathname = Astro.url.pathname;
const isEn = pathname.startsWith("/en");
let switchUrl = "";
let switchLabel = "";
let mobileSwitchLabel = "";

if (isEn) {
  // Currently EN, switch to VI (root)
  switchUrl = pathname.replace(/^\/en(\/|$)/, "/");
  if (switchUrl !== "/" && switchUrl.endsWith("/")) {
     switchUrl = switchUrl.slice(0, -1);
  }
  
  switchLabel = "EN"; // Displaying current
  mobileSwitchLabel = "Chuyển sang Tiếng Việt";
} else {
  // Currently VI, switch to EN
  switchUrl = "/en" + (pathname === "/" ? "" : pathname);
  if (switchUrl !== "/en" && switchUrl.endsWith("/")) {
     switchUrl = switchUrl.slice(0, -1);
  }
  switchLabel = "VN"; // Displaying current
  mobileSwitchLabel = "Switch to English";
}
---
<header
  x-data="{ open: false }"
  class="sticky top-0 z-50 bg-white border-b border-black/5"
>
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between"
  >
    <div
      class="relative flex w-full py-5 mx-auto bg-white lg:items-center lg:flex-row"
    >
      <div
        class="flex flex-row items-center justify-between flex-shrink-0 w-full lg:w-auto"
      >
        <a href={baseUrl + "/"} class="text-black inline-flex items-center gap-3">
          <img width="30" src="/logomi.svg" alt="logo miagent" />
          <img width="125" src="/miagent.svg" alt="miagent logo" />
        </a>

        <button
          @click="open = !open"
          :aria-expanded="open.toString()"
          aria-controls="main-navigation"
          aria-label="Toggle navigation menu"
          class="inline-flex items-center justify-center p-2 text-black hover:text-black focus:outline-none focus:text-black lg:hidden"
        >
          <svg
            class="w-6 h-6 transition-transform duration-300 ease-in-out"
            :class="{ 'rotate-90': open }"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              x-show="!open"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
            <path
              x-show="open"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <div class="hidden lg:flex flex-col w-full lg:flex-row lg:items-center">
        <nav
          class="flex flex-col lg:flex-row items-center gap-4 lg:gap-8 lg:mx-auto"
        >
          <a
            class="text-sm text-black transition duration-300 hover:text-blue-600 rounded-full px-3 py-1"
            href={baseUrl + "/"}
          >
            {i18next.t("common.navigation.about")}
          </a>
          <a
            href={baseUrl + "/pricing"}
            class="text-sm text-black transition duration-300 hover:text-blue-600 relative"
          >
            {i18next.t("common.navigation.pricing")}
            <span
              class="bg-red-500 ms-1 text-white text-[10px] px-2 py-1 rounded-full"
              >NEW</span
            >
          </a>
          <a
            href={baseUrl + "/contact"}
            class="text-sm text-black transition duration-300 hover:text-blue-600 relative"
          >
            {i18next.t("common.navigation.contact")}
            <sup
              class="ml-1 inline-block mt-1 w-1.5 h-1.5 bg-green-500 rounded-full"
              ></sup>
          </a>
          <a
            href={baseUrl + "/blog"}
            class="text-sm text-black transition duration-300 hover:text-blue-600 relative"
          >
            {i18next.t("common.navigation.blog")}
          </a>
        </nav>

        <div class="inline-flex items-center gap-2 list-none">
          <a
            href="https://app.miagent.io/signup"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center transition-all duration-200 text-black bg-green-500 rounded-full px-3 py-1 hover:text-white ring-1 ring-gray-200 focus:ring-2 focus:ring-blue-500 h-8 text-xs font-medium hover:bg-blue-500"
          >
            {i18next.t("common.navigation.register")}
          </a>
          <a
            href="https://app.miagent.io/signin"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center transition-all duration-200 ring-1 focus:ring-2 ring-gray-100 focus:outline-none text-white bg-black hover:bg-blue-500 focus:ring-gray-500/50 h-8 text-xs font-medium rounded-full px-3 py-1"
          >
            {i18next.t("common.navigation.login")}
          </a>
          <!-- Language Switcher -->
          <a
            href={switchUrl}
            class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors cursor-pointer"
            aria-label="Switch Language"
          >
            <span class="text-xs font-bold text-gray-700">{switchLabel}</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div
    x-cloak
    x-show="open"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 translate-y-5"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 translate-y-5"
    class="fixed inset-0 z-50 bg-white flex flex-col items-center justify-center space-y-6 text-center text-lg font-medium lg:hidden"
  >
    <button
      @click="open = false"
      class="absolute top-6 right-6 text-gray-600 text-2xl"
      aria-label="Đóng menu"
    >
      ✕
    </button>

    <nav class="flex flex-col items-center gap-6">
      <a
        class="text-xl text-black transition duration-300 hover:text-blue-600"
        @click="open = false"
        href={baseUrl + "/#features"}>{i18next.t("common.navigation.about")}</a
      >
      <a
        class="text-xl text-black transition duration-300 hover:text-blue-600"
        @click="open = false"
        href={baseUrl + "/pricing"}>{i18next.t("common.navigation.pricing")}</a
      >
      <a
        class="text-xl text-black transition duration-300 hover:text-blue-600"
        @click="open = false"
        href={baseUrl + "/contact"}>{i18next.t("common.navigation.contact")}</a
      >
      <a
        class="text-xl text-black transition duration-300 hover:text-blue-600"
        @click="open = false"
        href={baseUrl + "/blog"}>{i18next.t("common.navigation.blog")}</a
      >
      <a
        href="https://app.miagent.io/signin"
        target="_blank"
        class="mt-4 w-full inline-block bg-black text-white px-6 py-3 rounded-2xl text-base font-semibold hover:bg-blue-600"
      >
        {i18next.t("common.navigation.start")}
      </a>
      <a
        href={switchUrl}
        class="mt-4 px-6 py-2 rounded-full bg-gray-100 hover:bg-gray-200 text-base font-semibold text-gray-800"
      >
        {mobileSwitchLabel}
      </a>
    </nav>
  </div>

  <style>
    [x-cloak] {
      display: none !important;
    }
  </style>

  <script
    src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    defer></script>
</header>

