---
import i18next from "../../i18n";

const currentYear = new Date().getFullYear();
const currentLang = i18next.language;
const baseUrl = currentLang === "en" ? "/en" : "/vi";

const sections = [
  {
    title: i18next.t("common.footer.sections.about.title"),
    links: [
      { name: i18next.t("common.footer.sections.about.links.us"), href: baseUrl + "/about" },
      { name: i18next.t("common.footer.sections.about.links.contact"), href: baseUrl + "/contact" },
    ],
  },
  {
    title: i18next.t("common.footer.sections.product.title"),
    links: [
      { name: i18next.t("common.footer.sections.product.links.pricing"), href: baseUrl + "/pricing" },
      { name: i18next.t("common.footer.sections.product.links.integration"), href: baseUrl + "/#cong-nghe-doc-quyen" },
    ],
  },
  {
    title: i18next.t("common.footer.sections.support.title"),
    links: [
      { name: i18next.t("common.footer.sections.support.links.privacy"), href: baseUrl + "/privacy-policy" },
      { name: i18next.t("common.footer.sections.support.links.terms"), href: baseUrl + "/terms-of-service" },
      { name: i18next.t("common.footer.sections.support.links.payment"), href: baseUrl + "/payment-policy" },
    ],
  },
];
---

<footer class="bg-slate-50 border-t border-gray-200">
  <div class="px-6 md:px-12 lg:px-24 py-16 max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 mb-12">
      <div class="lg:col-span-4 space-y-6">
        <a href={baseUrl + "/"} class="inline-flex items-center gap-3">
          <img width="40" src="/logomi.svg" alt="Miagent Logo" />
          <img width="160" src="/miagent.svg" alt="Miagent Text" />
        </a>
        <p class="text-sm text-gray-600 leading-relaxed">
          {i18next.t("common.footer.description")}
        </p>

        <div class="space-y-3 pt-2">
          <div class="flex items-start gap-3 text-sm text-gray-600">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-gray-400 mt-0.5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
            >
            <span
              >Tầng 8, Tòa nhà Mitec, Yên Hoà, Cầu Giấy, Hà Nội, Quận Cầu Giấy,
              Hà Nội.</span
            >
          </div>
          <div class="flex items-center gap-3 text-sm text-gray-600">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path></svg
            >
            <a class="hover:text-blue-600 transition">info@miagent.io</a>
          </div>
          <div class="flex items-center gap-3 text-sm text-gray-600">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path></svg
            >
            <a class="hover:text-blue-600 transition">0708207777</a>
          </div>
        </div>
      </div>

      <div class="lg:col-span-4 grid grid-cols-2 gap-8">
        {
          sections.slice(0, 2).map((section) => (
            <div>
              <h3 class="font-semibold text-gray-900 mb-4">{section.title}</h3>
              <ul class="space-y-3">
                {section.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-sm text-gray-500 hover:text-blue-600 transition-colors"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
        <div class="col-span-2 sm:col-span-1 mt-4 sm:mt-0">
          <h3 class="font-semibold text-gray-900 mb-4">{sections[2].title}</h3>
          <ul class="space-y-3">
            {
              sections[2].links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-gray-500 hover:text-blue-600 transition-colors"
                  >
                    {link.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <div
        class="lg:col-span-4 bg-white p-6 rounded-2xl shadow-sm border border-gray-100"
      >
        <h3 class="text-lg font-bold text-gray-900 mb-2">
          {i18next.t("common.footer.sections.form.title")}
        </h3>
        <p class="text-sm text-gray-500 mb-4">
          {i18next.t("common.footer.sections.form.subtitle")}
        </p>

        <form class="space-y-3" onsubmit="handleSubmit(event)">
          <div>
            <input
              id="email"
              type="email"
              placeholder={i18next.t("common.footer.sections.form.email_placeholder")}
              required
              class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm transition"
            />
          </div>
          <div>
            <input
              id="phone"
              type="tel"
              placeholder={i18next.t("common.footer.sections.form.phone_placeholder")}
              required
              class="w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm transition"
            />
          </div>

          <button
            type="submit"
            class="w-full px-6 py-2.5 rounded-lg bg-gray-900 text-white font-medium hover:bg-blue-600 transition-all duration-200 shadow-lg shadow-gray-200"
          >
            {i18next.t("common.footer.sections.form.submit_button")}
          </button>
        </form>
        <p
          id="formSuccess"
          class="text-green-600 text-xs font-medium mt-3 hidden flex items-center gap-1"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path></svg
          >
          {i18next.t("common.footer.sections.form.success")}
        </p>
      </div>
    </div>

    <div
      class="pt-8 mt-8 border-t border-gray-200 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-gray-400"
    >
      <p>{i18next.t("common.footer.copyright", { year: currentYear })}</p>
      <div class="flex items-center gap-6">
        <a href={baseUrl + "/privacy-policy"} class="hover:text-gray-600 transition"
          >{i18next.t("common.footer.links.privacy")}</a
        >
        <a href={baseUrl + "/terms-of-service"} class="hover:text-gray-600 transition"
          >{i18next.t("common.footer.links.terms")}</a
        >
        <a href="/sitemap.xml" class="hover:text-gray-600 transition">{i18next.t("common.footer.links.sitemap")}</a
        >
      </div>
    </div>
  </div>

  <script is:inline>
    async function handleSubmit(e) {
      e.preventDefault();
      const email = document.getElementById("email").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const originalBtnText = submitBtn.innerText;

      // Loading state
      submitBtn.disabled = true;
      submitBtn.innerText = "Đang gửi...";

      const content = `New Lead Registration (Footer)\\nEmail: ${email}\\nPhone: ${phone}`;

      try {
        await fetch(
          "https://open.larksuite.com/open-apis/bot/v2/hook/e7acceee-c057-402f-9cad-974088e29d3b",
          {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              msg_type: "text",
              content: { text: content },
            }),
          }
        );

        document.getElementById("formSuccess").classList.remove("hidden");
        document.getElementById("email").value = "";
        document.getElementById("phone").value = "";
      } catch (error) {
        alert("Có lỗi xảy ra. Vui lòng thử lại sau hoặc liên hệ hotline.");
        console.error(error);
      } finally {
        // Reset button
        submitBtn.disabled = false;
        submitBtn.innerText = originalBtnText;

        // Tự động ẩn thông báo sau 5s
        setTimeout(() => {
          document.getElementById("formSuccess").classList.add("hidden");
        }, 5000);
      }
    }
  </script>
</footer>
