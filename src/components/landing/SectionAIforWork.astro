<section
  class="bg-gray-50 py-16 sm:py-12 px-4 sm:px-6 lg:px-8"
  x-data="{ activeImage: 1 }"
>
  <div class="max-w-7xl mx-auto text-center">
    <!-- Nút chọn ảnh -->
    <div class="flex justify-center space-x-4 mb-8">
      <button
        class="px-4 py-2 rounded-xl text-sm font-medium transition-all"
        :class="activeImage === 1 ? 'bg-stone-400 text-white' : 'bg-slate-300 text-black border border-gray-300 hover:bg-gray-100 font-semibold rounded-4xl'"
        @click="activeImage = 1"
      >
        AI Studio
      </button>
      <button
        class="px-4 py-2 rounded-xl text-sm font-medium transition-all"
        :class="activeImage === 2 ? 'bg-stone-400 text-white' : 'bg-slate-300 text-black border border-gray-300 hover:bg-gray-100 font-semibold rounded-4xl'"
        @click="activeImage = 2"
      >
        Trainning kiến thức
      </button>
      <button
        class="px-4 py-2 rounded-xl text-sm font-medium transition-all"
        :class="activeImage === 3 ? 'bg-stone-400 text-white' : 'bg-slate-300 text-black border border-gray-300 hover:bg-gray-100 font-semibold rounded-4xl'"
        @click="activeImage = 3"
      >
        Tích hợp CRM
      </button>
      <button
        class="px-4 py-2 rounded-xl text-sm font-medium transition-all"
        :class="activeImage === 4 ? 'bg-stone-400 text-white' : 'bg-slate-300 text-black border border-gray-300 hover:bg-gray-100 font-semibold rounded-4xl'"
        @click="activeImage = 4"
      >
        Chọn Model AI
      </button>
    </div>

    <!-- Hình ảnh hiển thị -->
    <template x-if="activeImage === 1">
      <img
        class="w-full h-auto rounded-4xl border-5 shadow-xl"
        src="/page_ai_studio.webp"
        alt="Ảnh ai studio"
        width="1200"
        height="800"
        loading="eager"
        decoding="async"
      />
    </template>

    <template x-if="activeImage === 2">
      <img
        class="w-full h-auto rounded-4xl border-5 shadow-xl"
        src="/page_ai_studio.png"
        alt="Ảnh training kiến thức"
        width="1200"
        height="800"
        loading="lazy"
        decoding="async"
      />
    </template>

    <template x-if="activeImage === 3">
      <img
        class="w-full h-auto rounded-4xl border-5 shadow-xl"
        src="/page_ai_crm.webp"
        alt="Ảnh chọn model"
        width="1200"
        height="800"
        loading="lazy"
        decoding="async"
      />
    </template>

    <template x-if="activeImage === 4">
      <img
        class="w-full h-auto rounded-4xl border-5 shadow-xl"
        src="/page_ai_crm.png"
        alt="Ảnh crm"
        width="1200"
        height="800"
        loading="lazy"
        decoding="async"
      />
    </template>
  </div>
</section>
